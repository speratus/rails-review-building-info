<section class="hero is-info">
    <div class="hero-body">
        <h1 class="title">
            <span class="icon">
                <i class="fas fa-building"></i>
            </span>
            Buildings
        </h1>
    </div>
</section>

<section class="section">
    <div class="container">
        <% @buildings.each do |building| %>
            <div class="level">
                <div class="level-left">
                    <%= link_to building.name, building_path(building), class: "is-size-5" %>
                </div>
            </div>
        <% end %>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="control">
            <%= link_to "Create a new Building", new_building_path, class: 'button is-info is-large' %>
        </div>
    </div>
</section>